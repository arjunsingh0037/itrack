{{!
    @template block_todo/item

    ToDo item template.

    Renders a single todo item. See template block_todo/content for details.
}}

<li data-item="{{id}}" class="list-group-item {{#done}}text-muted muted{{/done}}" style="clear:both">
    {{#done}} <i class="fa fa-check-square" aria-hidden="true"></i> {{/done}}
    {{^done}} <i class="fa fa-square-o" aria-hidden="true"></i> {{/done}}
    <span>{{todotext}}</span>
    <button data-control="delete" type="button" class="close" aria-label="{{#str}} delete {{/str}}">
        <span aria-hidden="true">&times;</span>
    </button>
</li>
